{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "edithtmlsource@jobisoft.de",
      "strict_min_version": "102.0"
    }
  },
  "name": "HTML Source Editor",
  "description": "__MSG_extensionDescription__",
  "version": "1.8",
  "default_locale": "en-US",
  "icons": {
    "32": "images/icon-html.png"
  },
  "permissions": [
    "compose", "menus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "compose_action": {
    "default_title": "Source (HTML)",
    "default_icon": {
      "32": "images/icon-html.png"
    }
  },
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; worker-src 'self' blob:"
}
